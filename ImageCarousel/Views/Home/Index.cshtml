@{
    ViewBag.Title = "Index";
}

@model ImageCarousel.Models.ImageModel

<style>
    .pic {
        text-align: center; /* Выравнивания картинки по центру в html */
    }
</style>
<div>
    <div>
        <p class="pic">
            @{
                string source = ImageCarousel.Models.ImageModel.GetRandomImagePath();
                <img class="cent" src="@source" vertical-align="middle" />
            }
        </p>
    </div>
</div>